{
  "Changes": [
  <% @hosts.each_index do |index| %>
    <%= index == 0 ? '' : ',' %>
    {
      "Action": "<%= @method %>",
      "ResourceRecordSet": {
        "Name": "<%= @hosts[index] %>.",
        "Type": "A",
        "TTL": 900,
        "ResourceRecords": [{
          "Value": "<%= @ip %>"
        }]
      }
    }
  <% end %>
  ]
}
